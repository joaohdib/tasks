<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Manager</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .task-container {
            width: 500px;
            background-color: #fff;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .task {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 0;
            border-bottom: 1px solid #ddd;
        }

        .task:last-child {
            border-bottom: none;
        }

        .task-info {
            flex-grow: 1;
        }

        .task-title {
            font-weight: bold;
            margin: 0;
        }

        .task-desc {
            margin: 5px 0;
            font-size: 14px;
            color: #555;
        }

        .task-status {
            font-size: 14px;
            color: green;
        }

        .task-status.not-done {
            color: red;
        }

        .task-actions button {
            margin-left: 10px;
            padding: 5px 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .task-actions .edit-btn {
            background-color: #ffc107;
            color: #fff;
        }

        .task-actions .delete-btn {
            background-color: #dc3545;
            color: #fff;
        }

        .task-actions .view-btn {
            background-color: #007bff;
            color: #fff;
        }

        .create-btn {
            display: block;
            width: 100%;
            margin-bottom: 20px;
            padding: 10px 0;
            background-color: #28a745;
            color: #fff;
            text-align: center;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            font-weight: bold;
        }
    </style>
</head>

<body>
    <div class="task-container">
        <button class="create-btn">Criar Tarefa</button>
        <% tasks.forEach(task=> { %>
            <div class="task">
                <div class="task-info">
                    <p class="task-title">
                        <%= task.title %>
                    </p>
                    <p class="task-desc">
                        <%= task.desc %>
                    </p>
                    <p class="task-status done">
                        <%= task.status %>
                    </p>
                </div>
                <div class="task-actions">
                    <button class="view-btn">Visualizar</button>
                    <button onclick="edit('<%=task.id%>')" class="edit-btn">Editar</button>
                    <button class="delete-btn">Deletar</button>
                </div>
            </div>
        <% }) %>
    </div>
</body>

